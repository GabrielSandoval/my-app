[
  {
    "name": "${name}",
    "image": "${image}",
    "essential": true,
    "command": ["rails", "db:create"],
    "logConfiguration":{
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${awslogs_group}",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "${awslogs_prefix}"
      }
    },
    "environment": [
      {
        "name": "RAILS_ENV",
        "value": "${environment}"
      },
      {
        "name": "DATABASE_HOST",
        "value": "${database_host}"
      },
      {
        "name": "DATABASE_NAME",
        "value": "${database_name}"
      },
      {
        "name": "DATABASE_USERNAME",
        "value": "${database_username}"
      },
      {
        "name": "DATABASE_PASSWORD",
        "value": "${database_password}"
      }
    ],
    "memory": 512,
    "cpu": 256
  }
]
