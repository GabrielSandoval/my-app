[
  {
    "name": "${name}",
    "image": "${image}",
    "essential": false,
    "command": ["bundle", "exec", "rails", "db:migrate"],
    "logConfiguration":{
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${awslogs_group}",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "${awslogs_prefix}"
      }
    },
    "environment": [
      {
        "name": "RAILS_ENV",
        "value": "${environment}"
      },
      {
        "name": "HOST",
        "value": "${host}"
      },
      {
        "name": "DATABASE_HOST",
        "value": "${database_host}"
      },
      {
        "name": "DATABASE_NAME",
        "value": "${database_name}"
      },
      {
        "name": "DATABASE_USERNAME",
        "value": "${database_username}"
      },
      {
        "name": "DATABASE_PASSWORD",
        "value": "${database_password}"
      }
    ],
    "portMappings": [
      {
        "containerPort": 3000,
        "hostPort": 3000
      }
    ],
    "memory": 2048,
    "cpu": 1024
  }
]
